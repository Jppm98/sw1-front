                                {{#each users}}
                                <option value="{{id}}">{{username}}, {{correo}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="mb-4">
                            <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full w-full focus:outline-none focus:shadow-outline">Compartir</button>
                        </div>
                        <div class="text-center">
                            <a class="btn btn-secondary btn-sm" href="/profile">Atr√°s</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
