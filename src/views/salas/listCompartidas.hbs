<div class="container mx-auto p-4">
    <h1 class="text-2xl font-semibold mb-4">Salas Que Te Han Compartido:</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {{#each salas}}
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <div class="px-6 py-4">
                <a href="/salas/inSala/{{tokenS}}" target="_blank" class="font-bold text-xl mb-2 block">{{title}}</a>
                <p class="text-gray-700 text-base">{{description}}</p>
            </div>
            <div class="px-6 pt-4 pb-2">
                <p class="text-gray-600 text-sm">Tiempo: {{timeago created_at}}</p>
            </div>
        </div>
        {{else}}
        <div class="max-w-sm rounded overflow-hidden shadow-lg">
            <div class="px-6 py-4">
                <p class="text-gray-700 text-base">No hay ninguna sala compartida contigo.</p>
                <a href="/salas/add" class="text-blue-500 font-bold hover:underline">Â¡Crea una!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
 