<div class="container mx-auto p-4">
    <div class="max-w-md mx-auto">
        <div class="bg-white rounded-lg shadow-lg">
            <div class="card-body" style="background-color: #f0f8ff;">
                <form action="/salas/edit/{{sala.id}}" method="POST">
                    <div class="mb-4">
                        <input type="text" name="title" class="form-input block w-full border border-gray-300 rounded-md py-2 px-3 placeholder-gray-500 focus:outline-none focus:border-blue-400" placeholder="Título" value="{{sala.title}}" autofocus>
                    </div>
                    <div class="mb-4">
                        <input type="text" name="xml" class="form-input block w-full border border-gray-300 rounded-md py-2 px-3 placeholder-gray-500 focus:outline-none focus:border-blue-400" placeholder="URL" value="{{sala.xml}}">
                    </div>
                    <div class="mb-4">
                        <textarea name="description" rows="4" class="form-textarea block w-full border border-gray-300 rounded-md py-2 px-3 placeholder-gray-500 focus:outline-none focus:border-blue-400" placeholder="Descripción">{{sala.description}}</textarea>
                    </div>
                    <div class="mb-4">
                        <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-full w-full focus:outline-none focus:shadow-outline">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
